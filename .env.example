# =============================================================================
# FORGE CASCADE - ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control - it's in .gitignore
# =============================================================================

# =============================================================================
# NEO4J DATABASE (Required)
# =============================================================================
NEO4J_URI=neo4j+s://[your-instance-id].databases.neo4j.io
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=[your-neo4j-password]
NEO4J_DATABASE=neo4j

# Neo4j Aura specific (optional, for reference)
# AURA_INSTANCEID=[your-instance-id]
# AURA_INSTANCENAME=[your-instance-name]

# =============================================================================
# SECURITY (Required)
# =============================================================================
# Generate a secure JWT secret: python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET_KEY=[generate-a-64-char-random-string]
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis password (required for production)
REDIS_PASSWORD=[your-redis-password]

# =============================================================================
# SEED DATA PASSWORDS (For initial setup only)
# =============================================================================
SEED_ADMIN_PASSWORD=[your-secure-admin-password]
SEED_ORACLE_PASSWORD=[your-secure-oracle-password]

# =============================================================================
# AI/LLM CONFIGURATION (Optional)
# =============================================================================
LLM_PROVIDER=openai
LLM_API_KEY=[your-openai-api-key]
LLM_MODEL=gpt-4-turbo-preview
LLM_MAX_TOKENS=2000
LLM_TEMPERATURE=0.4

# Embeddings
EMBEDDING_PROVIDER=openai
EMBEDDING_API_KEY=[your-openai-api-key]
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_ENV=development
DEBUG=false
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# MONITORING (Optional)
# =============================================================================
SENTRY_DSN=
PROMETHEUS_ENABLED=false
JAEGER_ENABLED=false

# =============================================================================
# CLOUDFLARE (For production with Cloudflare Tunnel)
# =============================================================================
# CLOUDFLARE_TUNNEL_TOKEN=[your-tunnel-token]

# =============================================================================
# VIRTUALS PROTOCOL (Optional - for ACP/GAME integration)
# =============================================================================
# ACP_ENABLED=false
# VIRTUALS_API_KEY=
# GAME_ENABLED=false
# GAME_API_KEY=
