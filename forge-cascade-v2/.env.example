# Forge Cascade V2 Configuration
# Copy to .env and fill in your values

# ═══════════════════════════════════════════════════════════════
# APPLICATION
# ═══════════════════════════════════════════════════════════════
APP_NAME=forge-cascade
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ═══════════════════════════════════════════════════════════════
# DATABASE - NEO4J
# ═══════════════════════════════════════════════════════════════
NEO4J_URI=neo4j+s://your-instance-id.databases.neo4j.io
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password-here
NEO4J_DATABASE=neo4j

# Connection Pool
NEO4J_MAX_CONNECTION_LIFETIME=3600
NEO4J_MAX_CONNECTION_POOL_SIZE=50
NEO4J_CONNECTION_TIMEOUT=30

# ═══════════════════════════════════════════════════════════════
# CACHE - REDIS (Optional)
# ═══════════════════════════════════════════════════════════════
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
CACHE_TTL_SECONDS=3600

# ═══════════════════════════════════════════════════════════════
# SECURITY
# ═══════════════════════════════════════════════════════════════
# JWT Configuration
JWT_SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Hashing
PASSWORD_BCRYPT_ROUNDS=12

# ═══════════════════════════════════════════════════════════════
# AI/ML CONFIGURATION
# ═══════════════════════════════════════════════════════════════
# LLM Provider
LLM_PROVIDER=anthropic
LLM_API_KEY=your-api-key-here
LLM_MODEL=claude-sonnet-4-20250514

# Embeddings
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSIONS=384

# ═══════════════════════════════════════════════════════════════
# IMMUNE SYSTEM
# ═══════════════════════════════════════════════════════════════
# Circuit Breaker
CIRCUIT_BREAKER_FAILURE_THRESHOLD=3
CIRCUIT_BREAKER_SUCCESS_THRESHOLD=2
CIRCUIT_BREAKER_TIMEOUT_SECONDS=30

# Canary Deployments
CANARY_INITIAL_TRAFFIC_PERCENT=5
CANARY_MIN_REQUESTS=100
CANARY_MAX_ERROR_RATE=0.01
CANARY_MAX_LATENCY_RATIO=2.0

# Health Checks
HEALTH_CHECK_INTERVAL_SECONDS=30
AUTO_QUARANTINE_THRESHOLD=3

# ═══════════════════════════════════════════════════════════════
# PIPELINE
# ═══════════════════════════════════════════════════════════════
PIPELINE_TIMEOUT_SECONDS=30
PIPELINE_MAX_CONCURRENT=10
PIPELINE_CACHE_ENABLED=true

# ═══════════════════════════════════════════════════════════════
# MONITORING (Optional)
# ═══════════════════════════════════════════════════════════════
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

JAEGER_ENABLED=false
JAEGER_HOST=localhost
JAEGER_PORT=6831

SENTRY_DSN=
