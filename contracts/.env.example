# Forge CapsuleMarketplace - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# DEPLOYMENT WALLET
# ============================================
# Private key for deploying contracts (without 0x prefix)
# ⚠️ NEVER commit your actual private key!
DEPLOYER_PRIVATE_KEY=your_private_key_here

# ============================================
# RPC ENDPOINTS
# ============================================
# Base Mainnet
BASE_RPC_URL=https://mainnet.base.org

# Base Sepolia Testnet
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# ============================================
# TREASURY ADDRESSES
# ============================================
# Platform Treasury (receives 10% of sales)
# frowg.base.eth resolved address
PLATFORM_TREASURY_ADDRESS=

# DAO Treasury (receives 5% of sales)
DAO_TREASURY_ADDRESS=

# ============================================
# VERIFICATION
# ============================================
# Basescan API Key for contract verification
# Get one at: https://basescan.org/apis
BASESCAN_API_KEY=

# ============================================
# OPTIONAL: GAS REPORTING
# ============================================
REPORT_GAS=false
COINMARKETCAP_API_KEY=

# ============================================
# OPTIONAL: FORKING (for local testing)
# ============================================
FORK_ENABLED=false
